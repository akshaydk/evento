
<h1>Disciplines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.name %></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Show', discipline %></button></td>
        <td><button type="button" class="btn btn-link"><%= link_to 'Edit', edit_discipline_path(discipline) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discipline', new_discipline_path %>
