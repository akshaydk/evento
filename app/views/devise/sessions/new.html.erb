<section class="section">

  <div class="container">
    <div class="row">
      <div class="container container--mini">
        <h2 style="text-align: center">Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "input-text",autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %> <a class="form-sublink" href="/auth/secret/new">Forgot password?</a><br />
          <%= f.password_field :password, class: "input-text", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-brand btn-block mb-4" %>
        </div>
      </div>
    </div>
  </div>
  </div>
  <% end %>